<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp">

    <View
        android:id="@+id/image_latest_item"
        android:layout_width="114dp"
        android:layout_height="149dp"
        android:background="@drawable/bg_image_progress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/category_product_latest_item"
        android:layout_width="35dp"
        android:layout_height="12dp"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="46dp"
        android:background="@drawable/bg_filling_image_progress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/name_product_latest_item"
        android:layout_width="75dp"
        android:layout_height="26dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/bg_filling_image_progress"
        app:layout_constraintStart_toStartOf="@+id/category_product_latest_item"
        app:layout_constraintTop_toBottomOf="@+id/category_product_latest_item" />

    <View
        android:id="@+id/prise_product_latest_item"
        android:layout_width="40dp"
        android:layout_height="9dp"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/bg_filling_image_progress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>